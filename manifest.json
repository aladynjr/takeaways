{
  "manifest_version": 3,
  "name": "YouTube Takeaways",
  "version": "1.0",
  "description": "Turn any long-form YouTube video into bite-sized takeaways and an interactive quiz as you watch. Perfect for podcasts and video essays.",
  "permissions": [
    "scripting",
    "tabs",
    "webNavigation",
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "YouTube Takeaways",
    "default_popup": "popup.html"
  }
}